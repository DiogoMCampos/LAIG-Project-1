<dsx>
    <scene root="root" axis_length="10"/>

    <views default="front">
        <perspective id="front" near="0.1" far="500" angle="90">
            <from x="15" y="10" z="35"/>
            <to x="15" y="5" z="0"/>
        </perspective>

        <perspective id="insideScene" near="5" far="50" angle="50">
            <from x="40" y="30" z="15"/>
            <to x="5" y="0" z="15"/>
        </perspective>
    </views>

    <illumination doublesided="1" local="1">
        <ambient r="0.3" g="0.7" b="0.7" a="1"/>
        <background r="0.7" g="0.7" b="0.7" a="1"/>
    </illumination>

    <lights>
        <omni id="center" enabled="1">
            <location x="0" y="0" z="10" w="1"/>
            <ambient r="0.2" g="0.2" b="0.2" a="1"/>
            <diffuse r="0.9" g="0.9" b="1" a="1"/>
            <specular r="0" g="0" b="0" a="1"/>
        </omni>

        <omni id="lamp" enabled="1">
            <location x="8" y="5.2" z="-0.7" w="1"/>
            <ambient r="1" g="1" b="1" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </omni>

        <spot id="leftWall" enabled="1" angle="30" exponent="0.1">
            <target x="5" y="0" z="5"/>
            <location x="2" y="5" z="8"/>
            <ambient r="1" g="1" b="1" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="car" file="../resources/bodyPaint.jpg" length_s="1" length_t="1"/>
        <texture id="windows" file="../resources/windows.jpg" length_s="1" length_t="1"/>
        <texture id="city" file="../resources/city.jpg" length_s="1" length_t="1"/>
        <texture id="wood" file="../resources/wood.jpg" length_s="1" length_t="1"/>
    </textures>

    <materials>
        <material id="default">
            <emission r="1" g="1" b="1" a="1"/>
            <ambient r="1" g="1" b="1" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
            <shininess value="1"/>
        </material>

        <material id="asphalt">
            <emission r="0.11" g="0.12" b="0.12" a="1"/>
            <ambient r="0" g="0" b="0" a="1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a=".1"/>
            <specular r="0" g="0" b="0" a=".1"/>
            <shininess value="0"/>
        </material>

        <material id="pink">
            <emission r="1" g="0.08" b="0.58" a="1"/>
            <ambient r="1" g="0.08" b="0.58" a="1"/>
            <diffuse r="1" g="0.2" b="0.58" a="1"/>
            <specular r="1" g="1" b="0" a="1"/>
            <shininess value="1"/>
        </material>
    </materials>

    <transformations>
        <transformation id="scaleToRim">
            <scale x="0.4" y="0.4" z="0.2"/>
        </transformation>
    </transformations>

    <animations>
          <animation id="enteranimation" span="2" type="linear">
            <controlpoint xx="3" yy="0" zz="-1"/>
            <controlpoint xx="1" yy="0" zz="4"/>
        </animation>
        <animation id="rotanimation" span="1.8" type="circular" centerx="0" centery="0" centerz="-5" radius="5" startang="-90" rotang="50"/>
        <animation id="finalanimation" span="5" type="linear">
            <controlpoint xx="0" yy="0" zz="0"/>
            <controlpoint xx="5" yy="0" zz="1"/>
            <controlpoint xx="8" yy="0" zz="0"/>
            <controlpoint xx="10" yy="0" zz="-2"/>
            <controlpoint xx="12" yy="0" zz="-8"/>
        </animation>
        <animation id="frontanimation" span="1" type="linear">
          <controlpoint xx="0" yy="0" zz="0"/>
          <controlpoint xx="6" yy="0" zz="0"/>
      </animation>
    </animations>

    <primitives>
        <primitive id="patch">
            <patch orderU="2" orderV="1" partsU="20" partsV="20">
                <controlpoint x="-2.0" y="-2.0" z="0.0"/>
                <controlpoint x="-2.0" y="2.0" z="0.0"/>
                <controlpoint x="0.0" y="-2.0" z="3.0"/>
                <controlpoint x="0.0" y="2.0" z="3.0"/>
                <controlpoint x="2.0" y="-2.0" z="0.0"/>
                <controlpoint x="2.0" y="2.0" z="0.0"/>
            </patch>
        </primitive>

        <primitive id="plane">
            <plane dimX="3" dimY="2" partsX="10" partsY="7"/>
        </primitive>

        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1"/>
        </primitive>

        <primitive id="chessboard">
            <chessboard du="8" dv="8" textureref="car" su="5" sv="3">
                <c1 r="0.85" g="0.5" b="0.07" a="1"/>
                <c2 r="0.92" g="0.83" b="0.7" a="1"/>
                <cs r="0.95" g="0" b="0" a="1"/>
            </chessboard>
        </primitive>

        <primitive id="vehicle">
            <vehicle/>
        </primitive>

    </primitives>

    <components>
        <component id="background">
            <transformation>
                <scale x="30" y="20" z="30"/>
            </transformation>

            <animation></animation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="city"/>

            <children>
                <primitiveref id="rectangle"/>
                <componentref id="road"/>
                <componentref id="leftWall"/>
                <componentref id="backWall"/>
                <componentref id="ceiling"/>
            </children>
        </component>

        <component id="leftWall">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="-1" y="0" z="0"/>
            </transformation>

            <animation></animation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="backWall">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <translate x="0" y="0" z="-1"/>
            </transformation>

            <animation></animation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="inherit"/>

            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="ceiling">
            <transformation>
                <translate x="0" y="1" z="0"/>
                <rotate axis="x" angle="90"/>
            </transformation>

            <animation></animation>

            <materials>
                <material id="pink"/>
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="road">
            <transformation>
                <translate x="0" y="0" z="0"/>
                <rotate axis="x" angle="-90"/>
                <rotate axis="z" angle="-90"/>
            </transformation>

            <animation></animation>

            <materials>
                <material id="asphalt"/>
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="vehicle">
            <transformation>
                <scale x="1.5" y="1.5" z="1.5"/>
                <translate x="5" y="0.75" z="2.5"/>
            </transformation>

            <animation>
                <animationref id="enteranimation"/>
                <animationref id="rotanimation"/>
                <animationref id="finalanimation"/>
                <animationref id="frontanimation"/>
            </animation>

            <materials>
                <material id="default"/>
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="vehicle"/>
            </children>
        </component>

        <component id="root">
            <transformation></transformation>

            <animation></animation>

            <materials>
                <material id="default"/>
            </materials>

            <texture id="wood"/>

            <children>
                <componentref id="background"/>
                <componentref id="vehicle"/>
            </children>
        </component>

    </components>
</dsx>
